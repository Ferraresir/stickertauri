{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Tienda De Calcos",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "protocol": {
        "all": false,
        "asset": true,
        "assetScope": ["**"]
      },
      "path": {
        "all": true
      },
      "fs": {
        "all": false,
        "readDir": true,
        "readFile": true,
        "writeFile": true,
        "scope": ["c:/tiendaimages", "c:/tiendaimages/cortar"]
      },
      "dialog": {
        "all": false,
        "ask": false,
        "confirm": false,
        "message": true,
        "open": true,
        "save": false
      },
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "msi",
      "identifier": "com.tiendadecalcos.dev",
      "icon": ["icons/icon.ico"]
    },
    "security": {
      "csp": "default-src 'self'; img-src 'self' data: https: asset: https://asset.localhost; frame-src 'self' youtube.com www.youtube.com; style-src 'self' 'unsafe-inline';"
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Tienda de Calcos",
        "width": 1200,
        "height": 800
      }
    ]
  }
}
